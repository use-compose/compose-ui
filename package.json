{
  "name": "gamma-compose",
  "files": [
    "dist"
  ],
  "main": "./dist/gamma-compose.umd.cjs",
  "module": "./dist/gamma-compose.js",
  "exports": {
    ".": {
      "import": "./dist/gamma-compose.js",
      "require": "./dist/gamma-compose.umd.cjs"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build-ignore-ts-error": "vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-storybook-docs": "storybook build --docs",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
    "js:lint": "eslint  --ignore-pattern .gitignore --fix src/",
    "js:lint:check": "eslint --ext .js,.ts,.vue --ignore-path .gitignore src/",
    "lint:style": "stylelint \"**/*.{vue,scss,css}\"",
    "lint:style:fix": "stylelint --fix \"**/*.{vue,scss,css}\"",
    "format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc",
    "prepare": "husky install",
    "chromatic": "chromatic --exit-zero-on-changes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "pnpm eslint",
      "pnpm format"
    ]
  },
  "dependencies": {
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.3.3",
    "@eslint/js": "^9.2.0",
    "@storybook/addon-designs": "^8.0.2",
    "@storybook/addon-essentials": "^8.0.9",
    "@storybook/addon-interactions": "^8.0.9",
    "@storybook/addon-links": "^8.0.9",
    "@storybook/blocks": "^8.0.9",
    "@storybook/test": "^8.0.9",
    "@storybook/vue3": "^8.0.9",
    "@storybook/vue3-vite": "^8.0.9",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "chromatic": "^11.5.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "react-dom": "^18.2.0",
    "sass": "^1.71.1",
    "storybook": "^8.0.9",
    "stylelint": "^16.5.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.0",
    "vite-plugin-linter": "^2.0.7",
    "vue-tsc": "2.0.28"
  }
}
